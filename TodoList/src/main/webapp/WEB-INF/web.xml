<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>TodoList</display-name>
 <!-- This is the web.xml aka deployment descriptor -->
 <!-- XML files are mostly used for CONFIGURATION 
 
	Who is this file for?
		The Web Container aka Servlet Container (Tomcat)
		
		Main purpose of the web.xml is to connect urls to serlets-->
		
		<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>cam.revature.HellowWorldSerlet</servlet-class>
		</servlet>
		<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
		<servlet-name>task</servlet-name>
		<servlet-class>cam.revature.servlet.TodoServelet</servlet-class>
		</servlet>
		<servlet-mapping>
		<servlet-name>task</servlet-name>
		<url-pattern>/task</url-pattern>
		</servlet-mapping>
 
</web-app>