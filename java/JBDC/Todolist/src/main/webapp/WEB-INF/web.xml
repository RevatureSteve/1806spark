<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Todolist</display-name>
  <!-- this is the web.xml aka deployment descriptor -->
  <!-- xml ( these days) are mostly used for CONFIGURATIONS!!!
  
  who is this configuration files for???
  	this files is for web container(servlet aka the container) -tomcat
  	
  	the main purpose of web.xml to connect urls to servlets
  	
   -->
   <servlet>
   <servlet-name>Hello</servlet-name> 
 <!-- the alias of a servlet for protection (different name  so hackers cannot see our class name -->
 <servlet-class>com.revature.servlets.HelloWorldServlet</servlet-class>
   
   </servlet>
   
   <servlet-mapping> 
   <!-- now used this alias of the servlet -->
   <servlet-name> hello</servlet-name>
	<url-pattern>/hello</url-pattern>
   </servlet-mapping>
   
   
   <!-- todoservlet -->
   <servlet>
   <servlet-name>task</servlet-name>
   <servlet-class>com.revature.servlets.ToDoServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   <servlet-name>task</servlet-name>
   <url-pattern>/task</url-pattern>
   </servlet-mapping>
</web-app>