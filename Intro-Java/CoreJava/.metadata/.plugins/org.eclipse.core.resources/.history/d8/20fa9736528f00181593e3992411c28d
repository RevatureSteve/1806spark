		System.out.println("2 to view availible pets");
		System.out.println("3 to view pet toys");
		String input = scan.nextLine();
		
		switch (input) {
		
		case "1":
			return new InteractwithPetScreen();
		
		case "2":
			System.out.println("feature not yet implemented");
			break;
		
		case "3":
			System.out.println("feature not yet implemented");
				break;
				
		
		} 
		
		return this;
	}
	

}
