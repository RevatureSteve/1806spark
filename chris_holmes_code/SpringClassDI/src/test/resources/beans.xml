<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--  3 Types of DI but only 2 supported in Spring -->
<bean id = 'fastcar' class ="com.revature.Car">
	<constructor-arg name = "name" value = "Fast Car"></constructor-arg>
	<property name = "color" value = 'black'></property>
	<property name = "engine" value = 'powerfulEngine'></property>
	</bean>
	<bean id="powerfulEngine" class = "com.revature.model.Engine"></bean>
	
</beans>
