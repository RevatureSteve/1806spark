<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Ers-Project-1</display-name>
  <filter>
    <filter-name>CorsFilter</filter-name>
    <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
    <init-param>
      <param-name>cors.allowed.origins</param-name>
      <param-value>*</param-value>
    </init-param>
    <init-param>
      <param-name>cors.allowed.methods</param-name>
      <param-value>GET,POST,HEAD,OPTIONS,PUT</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CorsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>com.revature.servlets.UserLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AllEmployeeReimbursementsServlet</servlet-name>
    <servlet-class>com.revature.servlets.AllEmployeeReimbursementsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AllEmployeeReimbursementsServlet</servlet-name>
    <url-pattern>/manager/reimbursements</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CreateReimbursementServlet</display-name>
    <servlet-name>CreateReimbursementServlet</servlet-name>
    <servlet-class>com.revature.servlets.CreateReimbursementServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateReimbursementServlet</servlet-name>
    <url-pattern>/employee/reimbursement/submit</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UpdateEmployeeInfo</display-name>
    <servlet-name>UpdateEmployeeInfo</servlet-name>
    <servlet-class>com.revature.servlets.UpdateEmployeeInfo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateEmployeeInfo</servlet-name>
    <url-pattern>/employee/update</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ReimbursementsById</display-name>
    <servlet-name>ReimbursementsById</servlet-name>
    <servlet-class>com.revature.servlets.ReimbursementsById</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReimbursementsById</servlet-name>
    <url-pattern>/ReimbursementsById</url-pattern>
  </servlet-mapping>
</web-app>