<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>TodoList</display-name>

	<!-- This is the web.xml aka deployment descriptor XML files (these days) 
		are mostly used for configuration who is this configuration file for? the 
		web container aka servlet container (tomcat) the main purpose of the web.xml 
		is the connet url servlets -->
	<!-- HELLOWRLDSERVLET -->
	<servlet>
		<!-- alias of a servlet for protection (different name so hackers can't 
			see our class) -->
		<servlet-name>hello</servlet-name>
		<servlet-class>com.revature.servlets.HelloWorldServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- use alias of servlet -->
		<servlet-name>hello</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>

	<!-- TODOSERVLET -->
	<servlet>
		<servlet-name>task</servlet-name>
		<servlet-class>com.revature.servlets.TodoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>task</servlet-name>
		<url-pattern>/task</url-pattern>
	</servlet-mapping>
</web-app>