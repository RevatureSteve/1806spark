<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>TodoList</display-name>
  
  
  <!-- This is the web xml aka deployment description -->
  <!-- XML files (these days) are mostly used for CONFIGURATION! 
  
  	who is this configuration file is for?
  		The Web Container aka Servelet Container (Tomcat)
  		
  Main purose of web xml IS TO CONNECT URLS TO SERVLETS.
   -->
  <!--  Hello World Servlet -->
   <servlet>
   <servlet-name>hello</servlet-name>  <!-- the alias of a servlet for protection (different name so hackers cannot see our class) -->
  <servlet-class>com.revature.servlet.HelloWorldServlet</servlet-class>
   </servlet>
   <servlet-mapping>
   <!--  now use the alias of a servlet -->
   <servlet-name>hello</servlet-name>
  	<url-pattern>/hello</url-pattern>
   </servlet-mapping>
   
   
   <!-- Task Servle -->
   
   <servlet>
   <servlet-name>task</servlet-name>
   <servlet-class>com.revature.servlet.ToDoServlet</servlet-class>
   </servlet>
   
   <servlet-mapping>
   <servlet-name>task</servlet-name>
   <url-pattern>/task</url-pattern>
   </servlet-mapping>
   
   
   
   
   
   
   
   
   
   
   
   
   
   
</web-app>