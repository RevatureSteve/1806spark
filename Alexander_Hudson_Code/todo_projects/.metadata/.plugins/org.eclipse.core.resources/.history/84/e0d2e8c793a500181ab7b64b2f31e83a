package com.Gumball.servlets;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.Gumball.pojo.Users;
import com.Gumball.service.AppService;
import com.fasterxml.jackson.databind.ObjectMapper;

public class GetAllUsersServlet extends HttpServlet{
	
	/**
	 * 
	 */
	private static final long serialVersionUID = -1808640786198219452L;
	private AppService appService = new AppService();
	
	protected void doGet (HttpServletRequest req, HttpServletResponse resp) throws IOException, ServletException{
		System.out.println("Users -GET");
		
		List <Users> us = appService.getAllUsers();
		
		ObjectMapper mapper = new ObjectMapper();
		
		String json = mapper.writeValueAsString(us);
		resp.setContentType("application/json");
		
		PrintWriter out = resp.getWriter();
		out.print(json);
	}
	
	protected void doPost (HttpServletRequest req, HttpServletResponse resp) throws IOException, ServletException {
		System.out.println("Users -POST");
	}

}
