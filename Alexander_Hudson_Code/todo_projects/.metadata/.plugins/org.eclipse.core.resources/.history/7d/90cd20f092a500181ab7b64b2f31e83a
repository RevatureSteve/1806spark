package com.Gumball.service;

import java.util.List;

import com.Gumball.dao.GumballDao;
import com.Gumball.dao.GumballDaoImpli;
import com.Gumball.pojo.Reimbursement;
import com.Gumball.pojo.Users;

public class AppService {
	
	private GumballDao gumballDao = new GumballDaoImpli();
	
	
	public Users login(Users us) {
		
		Users dbUser = gumballDao.getUserByEmail(us.getEmail());
		
		if (dbUser !=null ) {
		if(dbUser.getPassWord().equals(us.getPassWord())) {
			return dbUser;
		}
	}
	
	return null;
	}
	
	public List <Reimbursement> getReimbursements(){
		System.out.println("[LOG]-------retrieving--------All Reimbursements");
		return gumballDao.getReimbursements();
	}
	
	public List <Users> getAllUsers(){
		System.out.println("[LOG]-------retrieving--------All Users");
		return gumballDao.getAllUsers();
		
	}
	
	public List <Users> getAllUsersById(int emp_u_id) {
		System.out.println("[LOG]-------retrieving--------All Users by Id");
		return gumballDao.getAllUsersById(2);
	}
	
	public Users getUserByEmail(String email) {
		System.out.println("[LOG]-------retrieving--------User by email");
		return gumballDao.getUserByEmail(email);
	}
	
	public Users createUser(Users us) {
		
		return null;
	}

}
