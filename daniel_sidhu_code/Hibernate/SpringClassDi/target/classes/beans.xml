<?xml version="1.0" encoding="UTF-8"?>
<!-- file to configure the Spring Bean Container -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	
	<!-- 
		Turn on Springs component scan 
			which will have spring look for Spring@ 
	-->
	<context:component-scan base-package="com.revature"></context:component-scan>

	<!-- 3 Types of DI but only 2 supported in Spring -->
	<!-- Constructor/Setter in Spring but Interface is not -->
	<bean id="fastCar" class="com.revature.domain.Car">
		<!-- Constructor Injection -->
		<constructor-arg name="name" value="Fast Car"></constructor-arg>
		<!-- Setter Injection -->
		<property name="color" value="black"></property>
		<property name="engine" ref="powerfulEngine"></property>
	</bean>

	<!-- <bean id="powerfulEngine" class="com.revature.domain.Engine">
	</bean> -->

	<!-- Beanwiring: manually setting dependency injection E.g. EmployeeService 
		injected a EmployeeDaoImpl specified in xml below 
		
		<bean id="employeeService" class="com.revature.service.EmployeeService" autowire="default"> 
			<constructor-arg name="edao" ref="employeeDaoImpl"></constructor-arg> 
				</bean> 
		
		<bean id="employeeDaoImpl" class="com.revature.dao.EmployeeDaoImpl"> </bean> 
	-->

<!-- 
		Autowiring: allowing spring to wiring beans Automagically
			What are the ways?
				-default / no: no autowiring
				-constructor
				-byName
				-byType 
 -->	

	<bean id="employeeService" class="com.revature.service.EmployeeService" autowire="constructor">
	</bean>
	
	<!-- <bean id="managerService" class="com.revature.service.ManagerService" autowire="constructor">
	</bean> -->
	
	<bean id="employeeDoaImpl" class="com.revature.dao.EmployeeDaoImpl">
	</bean>

<!-- 	<bean id="managerDaoImpl" class="com.revature.dao.ManagerDaoImpl">
	</bean> -->
</beans>
