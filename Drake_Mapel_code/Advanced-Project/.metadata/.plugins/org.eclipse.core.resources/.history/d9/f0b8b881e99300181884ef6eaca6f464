package com.advanced.dao;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

import com.advanced.drake.Pizza;

public class PizzaDao {
	
//	Data Access Object
	public class StudentDao {
		
		private static final String filePathAndName = "src/com/advanced/pizza.txt";
		
		/*
		 * 	moving these CRUD methods to the package DAO
		 * 
		 * 		DAO is a type of design pattern
		 * 		Data Access Object
		 * 		does not talk to user -- so duck exceptions
		 */
		
		public static void serializePizza(Pizza pizza) throws IOException {
			
			// serialize pizza to a file
			FileOutputStream os = new FileOutputStream(filePathAndName);
			ObjectOutputStream oos = new ObjectOutputStream(os);
				
			oos.writeObject(pizza);
			
			os.close();
			oos.close();
		}
		
		public static Student deserializeStudent() throws IOException, ClassNotFoundException {
			
			FileInputStream is = new FileInputStream(filePathAndName);
			ObjectInputStream ois = new ObjectInputStream(is);
		
			Student john = (Student) ois.readObject();	
			
			is.close();
			ois.close();
			return john;
		}

	}

}
